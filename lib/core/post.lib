vec3 a = vec3(|a_r|, |a_g|, |a_b|);
vec3 b = vec3(|b_r|, |b_g|, |b_b|);
vec3 c = vec3(|c_r|, |c_g|, |c_b|);
vec3 d = vec3(|d_r|, |d_g|, |d_b|);

vec4 pal_res = vec4(pal(idx, a, b, c, d), 1.0);

pal_res = rgb2hsv(pal_res);

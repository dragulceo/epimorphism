--wt_id
family wt
flags {lib, farm1, farm2}
component wt
sub {wt_exp: w}
var w
dim float

--wt_inv < wt_id
flags {}
sub {wt_exp: 1.0 - w}

--wt_circ < wt_id
sub {wt_exp: sqrt(1.0 - (1.0 - w) * (1.0 - w))}

--wt_inv_circ < wt_id
flags {}
sub {wt_exp: 1.0 - sqrt(1.0 - (1.0 - w) * (1.0 - w))}

--wt_anim1 < wt_id
flags {lib}
scripts [randomize dly:45 spd:0.1 lib:seed_wt_main dim:float sub:wt_exp typ:sub]

--wt_anim2 < wt_id
flags {lib}
scripts [randomize dly:40 spd:0.1 lib:seed_wt_main dim:float sub:wt_exp typ:sub]


--alpha_id
family a
flags {lib, farm1, farm2}
component alpha
sub {a_exp: a}
par {alpha: 1.0}
var a
dim float

--alpha_no < alpha_id
sub {a_exp: 1.0}

--alpha_solid < alpha_id
sub {a_exp: a * @alpha@}

--alpha_linear < alpha_id
sub {a_exp: w * a * @alpha@}

--alpha_circ < alpha_id
sub {a_exp: sqrt(1.0 - (1.0 - w) * (1.0 - w)) * a * @alpha@}

--alpha_anim1 < alpha_solid
flags {lib, farm1}
par {alpha:wave 0.048 0.2 0.8}
scripts [randomize dly:40 spd:0.5 lib:seed_a_main dim:float sub:a_exp typ:sub]


--alpha_anim2 < alpha_solid
flags {lib, farm1}
par {alpha:wave 0.038 0.2 0.77}
scripts [randomize dly:55 spd:0.5 lib:seed_a_main dim:float sub:a_exp typ:sub]



--simple_color
family seed_color
flags {lib,farm1, farm2}
component simple_color
par {spd: 0.0, rot: 0.15, sat:1.0, val:1.0, pal:1.0}
var seed
dim vec4

--tex_color < simple_color
component tex_color_scroll
par {scale: wave 0.02 0.1 0.33, spd: 0.0, rot: 0.0, sat:1.0, val:1.0, tex_spd:1.0, pal:1.0}
images [textures/simplegeom/tile_grid1.png]

--simple_color_anim1 < simple_color
flags {anim1, anim3}
par {spd: 0.05, rot: 0.15, sat:1.0, val:1.0, pal:1.0}

--tex_color_anim1 < tex_color
scripts [randomize dly:55 spd:0.05 lib:images1 dim:vec4 sub:0 typ:image]
flags {anim1}

--tex_color_anim2 < tex_color
scripts [randomize dly:65 spd:0.05 lib:images2 dim:vec4 sub:0 typ:image]
flags {anim2}

--tex_color_anim3 < tex_color
scripts [randomize dly:15 spd:0.3 lib:images3 dim:vec4 sub:0 typ:image]
flags {anim2}

--tex_color_anim4 < tex_color
scripts [randomize dly:35 spd:0.05 lib:images1 dim:vec4 sub:0 typ:image]
flags {anim3}

--tex_color_anim5 < tex_color
scripts [randomize dly:40 spd:0.05 lib:images2 dim:vec4 sub:0 typ:image]
flags {}


--fb_color < simple_color
flags {lib}
component fb_color
par {scale: 1.0, spd: 0.0, rot: 0.0, sat:1.0, val:1.0}


--tex_color_ponies < simple_color
component tex_color
par {scale: 0.33, spd: 0.0, rot: 0.0, sat:1.0, val:1.0, pal:1.0}
images [textures/ponies_1.png]
